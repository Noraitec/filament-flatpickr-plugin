{
  "name": "noraitec/filament-flatpickr-plugin",
  "description": "Plugin de Filament que integra Flatpickr con soporte completo para su API y configuraciÃ³n avanzada de calendario.",
  "type": "filament-plugin",
  "license": "LGPL-3.0-or-later",
  "autoload": {
    "psr-4": {
      "Noraitec\\FilamentFlatpickrPlugin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Dreamex",
      "email": "dsotelo@noraitec.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "laravel/framework": "^12.0",
    "filament/filament": "^3.0",
    "spatie/laravel-package-tools": "^1.91"
  },
  "require-dev": {
    "pestphp/pest": "^3.7",
    "nunomaduro/larastan": "^3.0",
    "nunomaduro/collision": "^8.7",
    "orchestra/testbench": "^10.1",
    "livewire/livewire": "^3.6"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "post-update-cmd": [
      "echo $(git describe --tags --abbrev=0) > VERSION"
    ],
    "post-install-cmd": [
      "echo $(git describe --tags --abbrev=0) > VERSION"
    ]
  }
}
